<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="titleId">Title</label>
    <input type="text" class="form-control" name="title" id="titleId" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="postBodyId">Post</label>
    <textarea class="form-control" name="postBody" id="postBodyId" rows="8" cols="80"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include('partials/footer'); -%>
